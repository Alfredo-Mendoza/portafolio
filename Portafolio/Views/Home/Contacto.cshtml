@{
	ViewData["Title"] = "Proyectos";
}

<div class="container">
    <h1>Formulario de contacto</h1>
	<form asp-controller="Home" asp-action="Contacto">
		<div class="mb-3">
			<label for="nombre" class="form-label">Nombre</label>
			<input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ingresa tu nombre"/>
		</div>
		<div class="mb-3">
			<label for="email" class="form-label">Email</label>
			<input type="email" class="form-control" id="email" name="email" placeholder="Ingresa tu email" />
		</div>
		<div class="mb-3">
			<label for="mensaje" class="form-label">Mensaje</label>
			<textarea class="form-control" id="mensaje" name="mensaje" placeholder="Ingresa tu mensaje" rows="5"></textarea>
		</div>
		<button type="submit" id="enviar" class="btn btn-primary">Enviar</button>
	</form>
</div>
